{% extends "::baseAdmin.html.twig" %}

	{% block title %}Liste des articles{% endblock %}

	{% block body %}

		<div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                    	 Liste des articles                 
                    </h1>
                </div>
                <!-- /.col-lg-12 -->
        </div>

        <div class="col-lg-12">
        	<div class="row">                        
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="myTable">
                        <thead>
                            <tr>
                                <th>Titre</th>
                                <th>Sujet</th>
                                <th>Corps(s)</th>
                                <th>Date de publication</th>
                                <th>Date d'expiration</th>
                                <th>Images</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        	{% if articles is not empty %}
                        		{% for article in articles %}
                                    <tr class="odd gradeX">
                                        <td>{{ article.title|title }}</td>
                                        <td>{{ article.subject }}</td>
                                        <td>
                                        	{{ article.main[:150]|raw }}
	                                        	{% if article.main|length > 150 %}
	                                        		<a href="#">Lire l'article</a>
	                                        	{% endif %}
                                        </td>
                                        <td class="center">{{ article.dateCreated |date('d-m-Y') }}</td>
                                        <td class="center">{{ article.dateDeleted |date('d-m-Y') }}</td>
                                        <td>
                                        	{% if article.photo is not empty %}
                                        		{% for photo in article.photo %}
                                        			<img src="{{ asset('uploads/photos/' ~photo.filename) }}" style="height:110px;width:245px;margin-top:15px;">
                                        		{% endfor %}
                                        	{% endif %}
                                        </td>
                                         <td>
                                        	
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                        </tbody>
                    </table>                   
                </div>                               
            </div>           
        </div>

    {% endblock %}
