{% extends "::baseAdmin.html.twig" %}

	{% block title %}Liste des articles{% endblock %}

	{% block body %}

		<div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                    	 {{ articleEdited.title|title }}                
                    </h1>
                </div>
                <!-- /.col-lg-12 -->
        </div>

        <div class="col-lg-12">
        	<div class="row"> 

                <div class="col-lg-12">
                    <div class="panel panel-green">
                        <div class="panel-heading">
                            {{ articleEdited.title|title }}
                        </div>
                        <div class="panel-body">
                            <p>{{ articleEdited.subject|capitalize }}</p>
                            <p>{{ articleEdited.main|raw }}</p>
                            <p>Date de publication : {{ articleEdited.dateCreated|date('d-m-Y') }}</p>
                            <p>Date d'expiration : {{ articleEdited.dateDeleted|date('d-m-Y') }}</p>
                            <p>Statut : 
                                        {% if articleEdited.active == 1 %}
                                            Actif
                                        {% else %}
                                            Inactif
                                        {% endif %}
                            </p> 
                                            {% if articleEdited.photo is not empty %}
                                                {% for photo in articleEdited.photo %}
                                                    <p class="center">
                                                        <img src="{{ asset('uploads/photos/' ~photo.filename) }}" style="height:110px;width:245px;margin-top:15px;margin-left:70px;">
                                                    </p>                             
                                                {% endfor %}
                                            {% endif %}
                        </div>
                        <div class="panel-footer">
                            <a href="{{ path('back_office_article_list') }}">Retour Ã  la liste des articles</a>
                        </div>
                    </div>
                    <!-- /.col-lg-4 -->
                </div>
                                         
            </div>           
        </div>

    {% endblock %}
